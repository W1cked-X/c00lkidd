-- c00lkidd RED • Same size as your FTFHAX • Mobile Perfect • 2025
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Lighting = game:GetService("Lighting")
local lp = Players.LocalPlayer

-- ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "c00lkiddRED"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = game.CoreGui

-- Toggle Button (same style as FTFHAX)
local ToggleBtn = Instance.new("ImageButton")
ToggleBtn.Size = UDim2.new(0, 80, 0, 80)
ToggleBtn.Position = UDim2.new(1, -90, 0.5, -40)
ToggleBtn.BackgroundTransparency = 0.5
ToggleBtn.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
ToggleBtn.Image = "rbxassetid://11570895459"
ToggleBtn.ImageColor3 = Color3.fromRGB(255, 80, 80)
ToggleBtn.Parent = ScreenGui

local tbText = Instance.new("TextLabel", ToggleBtn)
tbText.Size = UDim2.new(1,0,0.3,0)
tbText.Position = UDim2.new(0,0,0.7,0)
tbText.BackgroundTransparency = 1
tbText.Text = "c00lkidd"
tbText.TextColor3 = Color3.new(1,1,1)
tbText.Font = Enum.Font.GothamBold
tbText.TextScaled = true

-- Main Window — EXACT SAME SIZE AS YOUR FTFHAX
local Main = Instance.new("Frame")
Main.Size = UDim2.new(0, 420, 0, 320)
Main.Position = UDim2.new(0.5, -210, 0.5, -160)
Main.BackgroundColor3 = Color3.fromRGB(47, 47, 47)
Main.BorderColor3 = Color3.new(0,0,0)
Main.BorderSizePixel = 2
Main.ClipsDescendants = true
Main.Visible = false
Main.Active = true
Main.Draggable = true
Main.Parent = ScreenGui

-- TopBar (same as FTFHAX)
local TopBar = Instance.new("Frame", Main)
TopBar.Size = UDim2.new(1,0,0,40)
TopBar.BackgroundColor3 = Color3.fromRGB(31,31,31)

local TitleLabel = Instance.new("TextLabel", TopBar)
TitleLabel.Size = UDim2.new(0.5,0,1,0)
TitleLabel.Position = UDim2.new(0,10,0,0)
TitleLabel.BackgroundTransparency = 1
TitleLabel.Text = "c00lkidd RED"
