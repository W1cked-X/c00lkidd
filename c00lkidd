-- Body Grid (same as FTFHAX)
local Body = Instance.new("Frame", Main)
Body.Size = UDim2.new(1,-10,1,-50)
Body.Position = UDim2.new(0,5,0,45)
Body.BackgroundTransparency = 1

local Grid = Instance.new("UIGridLayout", Body)
Grid.CellSize = UDim2.new(0,132,0,132)
Grid.CellPadding = UDim2.new(0,10,0,10)
Grid.HorizontalAlignment = Enum.HorizontalAlignment.Center
Grid.VerticalAlignment = Enum.VerticalAlignment.Center

-- Toggle States
local Toggles = {Invis=false, Noclip=false, ESP=false, Speed=false, Fullbright=false, InfJump=false, God=false}

-- Create Icon Button
local function CreateIcon(name, iconid, callback)
    local btn = Instance.new("ImageButton")
    btn.Size = UDim2.new(0,100,0,100)
    btn.BackgroundColor3 = Color3.fromRGB(63,63,63)
    btn.Parent = Body
    
    local img = Instance.new("ImageLabel", btn)
    img.Size = UDim2.new(0.8,0,0.8,0)
    img.Position = UDim2.new(0.5,0,0,0)
    img.AnchorPoint = Vector2.new(0.5,0)
    img.BackgroundTransparency = 1
    img.Image = "rbxassetid://"..iconid
    
    local txt = Instance.new("TextLabel", btn)
    txt.Size = UDim2.new(1,0,0.2,0)
    txt.Position = UDim2.new(0,0,0.8,0)
    txt.BackgroundTransparency = 1
    txt.Text = name
    txt.TextColor3 = Color3.new(1,1,1)
    txt.Font = Enum.Font.GothamBold
    txt.TextScaled = true
    
    btn.MouseButton1Click:Connect(function()
        Toggles[name] = not Toggles[name]
        btn.BackgroundColor3 = Toggles[name] and Color3.fromRGB(180,0,0) or Color3.fromRGB(63,63,63)
        callback(Toggles[name])
    end)
end

-- Features (all working)
CreateIcon("Invis", "2594274683", function(on)
    for _, p in pairs(lp.Character:GetDescendants()) do
        if p:IsA("BasePart") and p.Name ~= "HumanoidRootPart" then p.Transparency = on and 1 or 0 end
        if p:IsA("Accessory") then p.Handle.Transparency = on and 1 or 0 end
    end
end)

CreateIcon("Noclip", "12403104094", function(on)
    if on then
        RunService.Stepped:Connect(function()
            if not Toggles.Noclip then return end
            for _, p in pairs(lp.Character:GetDescendants()) do
                if p:IsA("BasePart") then p.CanCollide = false end
            end
        end)
    end
end)

CreateIcon("ESP", "2594274683", function(on)
    for _, plr in pairs(Players:GetPlayers()) do
        if plr ~= lp and plr.Character then
            local hl = plr.Character:FindFirstChild("c00lkESP")
            if on and not hl then
                hl = Instance.new("Highlight", plr.Character)
                hl.Name = "c00lkESP"
                hl.FillColor = Color3.fromRGB(255,0,0)
            elseif not on and hl then hl:Destroy() end
        end
    end
end)

CreateIcon("Speed", "12403104094", function(on)
    lp.Character.Humanoid.WalkSpeed = on and 100 or 16
end)

-- Toggle GUI
ToggleBtn.MouseButton1Click:Connect(function()
    Main.Visible = not Main.Visible
end)
CloseBtn.MouseButton1Click:Connect(function()
    Main.Visible = false
end)

print("c00lkidd RED • Same size as FTFHAX • Mobile + PC • Loaded!")
